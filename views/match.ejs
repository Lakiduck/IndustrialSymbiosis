<!DOCTYPE html>
<html>
    <head>
        <title>Industrial Symbiosis - Match</title>
        <!-- Compiled and minified CSS -->
        <!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">-->
        <!-- Compiled and minified JavaScript -->
        <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>-->
        <link href="/public/styles.css" rel="stylesheet" type="text/css"/>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@100&display=swap" rel="stylesheet">
    </head>
    <body>
        <div id="grid">
            <%- include('partials/nav'); %>
            <div id="tt">
                <h1>Here are your matches <%=target.cname%></h1>
                <h3>Matches for your output</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Input</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%inputMatches.forEach(function(inputMatch){%>
                            <tr>
                                <td><%=inputMatch.company%></td>
                                <td><%=inputMatch.input1%></td>
                                <td><%=inputMatch.inputQuantity1%></td>
                                <td><%=inputMatch.inputUnit1%></td>
                            </tr>
                        <%});%>
                    </tbody>
                </table>
                <h3>Where to get your input from</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Input</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%outputMatches.forEach(function(outputMatch){%>
                            <tr>
                                <td><%=outputMatch.company%></td>
                                <td><%=outputMatch.output1%></td>
                                <td><%=outputMatch.outputQuantity1%></td>
                                <td><%=outputMatch.outputUnit1%></td>
                            </tr>
                        <%});%> 
                    </tbody>
                </table>
            </div>
        </div>
    </body>
    </html>
